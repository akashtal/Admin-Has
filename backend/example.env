# ==================================
# HashView Backend Environment Variables
# ==================================

# Server Configuration
PORT=5000
NODE_ENV=development  # development | production | test

# ==================================
# Database Configuration
# ==================================

# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
# Get from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hashview?retryWrites=true&w=majority

# ==================================
# JWT Authentication
# ==================================

# Secret key for signing JWT tokens (use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_this
JWT_EXPIRE=7d  # Token expiration time (7 days)

# ==================================
# Email Service (SendGrid)
# ==================================

# SendGrid API Key
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=noreply@hashview.com

# ==================================
# Image Hosting (Cloudinary)
# ==================================

# Cloudinary Configuration
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==================================
# Google Services
# ==================================

# Google Maps API Key (for geocoding and places)
# Get from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXX

# Google Place ID for business verification (optional)
GOOGLE_PLACES_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXX

# ==================================
# TripAdvisor Integration (Common Ninja)
# ==================================

# Common Ninja API Key (for TripAdvisor reviews widget)
# Get from: https://www.commoninja.com/dashboard/api
# Plan: Big Ninja or higher required
COMMON_NINJA_API_KEY=your_common_ninja_api_key

# TripAdvisor Data Caching (in hours)
# How long to cache TripAdvisor rating before refreshing
# Recommended: 6-12 hours (reduces API calls)
TRIPADVISOR_CACHE_HOURS=6

# ==================================
# KYC Verification (Didit)
# ==================================

# Didit API Configuration
# Get from: https://didit.me
DIDIT_API_KEY=your_didit_api_key
DIDIT_API_URL=https://api.didit.me/v1
DIDIT_WORKFLOW_ID=your_workflow_id

# ==================================
# Redis Cache (Optional but Recommended for Production)
# ==================================

# Redis Connection String
# Format: redis://username:password@host:port
# Local: redis://localhost:6379
# Cloud (Redis Labs): redis://default:password@host:port
REDIS_URL=redis://localhost:6379

# ==================================
# Error Monitoring (Sentry)
# ==================================

# Sentry DSN (Data Source Name)
# Get from: https://sentry.io/settings/projects/
# Leave empty to disable Sentry
SENTRY_DSN=https://xxxxx@o000000.ingest.sentry.io/0000000

# ==================================
# Default Admin Account
# ==================================

# These credentials are used to create the default admin account
# IMPORTANT: Change these in production!
ADMIN_EMAIL=admin@hashview.com
ADMIN_PASSWORD=Admin@123

# ==================================
# CORS Configuration
# ==================================

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production: https://admin.hashview.com
FRONTEND_URL=http://localhost:3000

# ==================================
# Features & Integrations
# ==================================

# Enable automatic sync jobs (cron)
# Set to 'false' to disable background jobs
ENABLE_AUTO_SYNC=true

# SMS Service (Optional - for phone verification)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ==================================
# Rate Limiting
# ==================================

# Rate limit window (in minutes)
RATE_LIMIT_WINDOW=15
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# File Upload Limits
# ==================================

# Max file size (in MB)
MAX_FILE_SIZE=10
# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# ==================================
# Logging
# ==================================

# Log level: error | warn | info | debug
LOG_LEVEL=info

# ==================================
# Socket.io Configuration
# ==================================

# Socket.io CORS origin
SOCKET_ORIGIN=http://localhost:3000,http://localhost:8081

# ==================================
# Production Deployment
# ==================================

# When deploying to production, also set:
# - NODE_ENV=production
# - Use strong JWT_SECRET (generate new one)
# - Update FRONTEND_URL to production URL
# - Enable Sentry with production DSN
# - Use production Redis instance
# - Update admin credentials
# - Enable HTTPS
# - Configure proper CORS origins










